def multiplication_or_sum(num1,num2):
    product= num1 * num2
    if product <= 1000:
        return product
    else: 
        return num1 + num2
    
#calculation 1
result = multiplication_or_sum(20,30)
print("the result is", result)

#calculation 2
result = multiplication_or_sum(40,50)
print("the result is", result)
